create table Result(roll number(3), name varcha(30), class varchar(10));
create table stud_marks(name varchar(10), total_marks number(4));


create or replace procedure proc_grade(marks in number, stu_name in varchar2, roll in number, distinction out varchar2)
is
begin
if marks<=1500 and marks>=990 then
distinction:='Distinction';
elsif marks>=900 and marks<=989 then 
distinction:='First Class';
elsif marks<=899 and marks>=825 then
distinction:='Second Class';
else 
distinction:='Fail';
end if;
end;
/


declare
name1 varchar(30);
marks1 number(10);
roll1 number(10);
grade1 varchar(20);
begin
name1:='&name1';
roll1:=&roll1;

select total_marks into marks1 from stud_marks where name=name1 ;
proc_grade(marks1,name1,roll1,grade1);
dbms_output.put_line('Grade is '|| grade1);
insert into Result values(roll1, name1,grade1);
end;


